<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane minHeight="-Infinity" minWidth="-Infinity" styleClass="pane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AttractionController">
   <children>
      <VBox prefHeight="638.0" prefWidth="986.0">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Atrações" underline="true">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Text>
                  <HBox alignment="TOP_RIGHT" prefHeight="49.0" prefWidth="886.0" spacing="16.0" >
                     <children>
                        <Button fx:id="buttonAdd" mnemonicParsing="false" onAction="#handleAddAttraction" prefHeight="49.0" prefWidth="122.0" style="-fx-font-weight: bold;" text="Adicionar">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <graphic>
                              <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../res/images/add.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="buttonEdit" mnemonicParsing="false" onAction="#handleEditAttraction" prefHeight="49.0" prefWidth="122.0" style="-fx-font-weight: bold;" text="Editar">
                           <graphic>
                              <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../res/images/edit.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="buttonDelete" alignment="CENTER" mnemonicParsing="false" onAction="#handleDeleteAttraction" prefHeight="49.0" prefWidth="122.0" style="-fx-font-weight: bold;" text="Excluir">
                           <graphic>
                              <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../res/images/trash.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </padding>
            </HBox>
            <TableView fx:id="attractionsTable" accessibleRole="IMAGE_VIEW" prefHeight="544.0" prefWidth="954.0">
               <columns>
                  <TableColumn fx:id="nameColumn" prefWidth="312.0" text="Nome" />
                  <TableColumn fx:id="descriptionColumn" prefWidth="641.0" text="Descrição" />
               </columns>
               <VBox.margin>
                  <Insets left="16.0" right="16.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </children>
</Pane>
